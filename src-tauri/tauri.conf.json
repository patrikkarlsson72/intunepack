{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "IntunePack",
  "version": "0.1.0",
  "identifier": "com.patrikkarlsson.intunepack",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "IntunePack",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "all": true,
      "scope": [
        {
          "name": "IntuneWinAppUtilDecoder",
          "cmd": "IntuneWinAppUtilDecoder.exe",
          "args": []
        },
        {
          "name": "IntuneWinAppUtil",
          "cmd": "IntuneWinAppUtil.exe",
          "args": []
        }
      ]
    },
    "dialog": {
      "all": true,
      "ask": true,
      "confirm": true,
      "message": true,
      "open": true,
      "save": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "bin/IntuneWinAppUtilDecoder.exe",
      "bin/IntuneWinAppUtil.exe"
    ]
  }
}
